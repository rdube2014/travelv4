<div class="page-header">
  <h1>All Replies</h1>
</div>

<p><%= link_to 'Add a New Reply', new_reply_url, class: 'btn btn-primary' %>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Expert</th>
      <th>Trip Title</th>
      <th>Reply text</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.user.full_name %></td>
        <td><%= reply.request.travel_to_city   %></td>
        <td><%= truncate(reply.reply_text, length: 200) %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, reply_url(reply), class: 'btn btn-primary' %></td>
         
       </tr>
    <% end %>
  </tbody>
</table>

