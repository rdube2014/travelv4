<div class="page-header">
  <h1>New Request</h1>
</div>

<% if @request.errors.any? %>
  <ul>
    <% @request.errors.full_messages.each do |message| %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <ul><%= message %></ul>
      </div>
      <% end %>
  </ul>
  <% end %> 

<%= form_tag(requests_url, method: 'post', class: 'form-horizontal') do %>
  
  <div class="form-group">
    <%= label_tag :created_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :created_date, Time.now.strftime("%m/%d/%Y"), class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <%= label_tag :trip_start_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
    <%= date_field_tag :trip_start_date, nil, class: 'form-control' %> 
  </div>
</div>

   <div class="form-group">
    <%= label_tag :trip_end_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= date_field_tag :trip_end_date, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :travel_to_city, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :travel_to_city, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :travel_to_state, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :travel_to_state, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :category, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <select <%= text_field_tag :category, nil, class: 'form-control' %>
        <option value="Leisure">Leisure</option>
        <option value="Business">Business</option>
       </select>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :request_text, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :request_text, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Request", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
